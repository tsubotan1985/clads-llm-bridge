# CLADS LLM Bridge Environment Configuration
# Copy this file to .env and modify as needed

# Application Ports
WEB_UI_PORT=4322
PROXY_PORT_GENERAL=4321  # General endpoint (limited models)
PROXY_PORT_SPECIAL=4333  # Special endpoint (full access)

# Backward compatibility
PROXY_PORT=4321  # Default port for general endpoint

# Logging Configuration
LOG_LEVEL=INFO
LITELLM_LOG=INFO

# Database Configuration
DATABASE_PATH=/app/data/clads_llm_bridge.db
DATA_DIR=/app/data

# Security Configuration
INITIAL_PASSWORD=llm-bridge
SESSION_SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY_PATH=/app/data/.encryption_key

# LiteLLM Configuration
LITELLM_DROP_PARAMS=true

# Google AI Studio Configuration
# Set your Google AI Studio API key for Gemini models
# GEMINI_API_KEY=your-google-ai-studio-api-key-here

# Development Settings (uncomment for development)
# PYTHONUNBUFFERED=1
# PYTHONDONTWRITEBYTECODE=1